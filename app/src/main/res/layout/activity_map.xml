<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="MapActivity" >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapActivity"
        map:cameraTargetLat="47.8657299"
        map:cameraTargetLng="7.2315736"
        map:cameraZoom="8"
        map:mapType="normal"/>

    <TextView
        android:id="@+id/error_txt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:background="@color/red"
        android:textColor="@color/white"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/show_closest_btn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_marginRight="8dp"
        android:text="D"
        android:onClick="onClickClosestBtn"/>

    <Button
        android:id="@+id/show_haut_rhin_btn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="105dp"
        android:layout_marginRight="8dp"
        android:text="68"
        android:onClick="onClickHautRhinBtn"/>

    <Button
        android:id="@+id/show_my_location_btn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="64dp"
        android:text="Ici"
        android:onClick="onClickMyLocationBtn"/>
</RelativeLayout>
