<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".fragments.MapFragment"
    >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.MapFragment"
        map:mapType="normal"
        map:cameraTargetLat="@string/map_initial_lat"
        map:cameraTargetLng="@string/map_initial_lng"
        map:cameraZoom="@string/map_initial_zoom"
        />

    <!-- Add some top padding when we draw behind the status bar (API >= 19) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/top_margin_status_bar"
        >

        <TextView
            android:id="@+id/error_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/deep_orange_A700_85"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/fab_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            >

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/show_haut_rhin_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/fab_68"
                fab:fab_type="mini"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/accent_pressed"
                fab:fab_colorRipple="@color/accent_ripple"
                 />

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/show_my_location_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/fab_my_location"
                fab:fab_type="mini"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/accent_pressed"
                fab:fab_colorRipple="@color/accent_ripple" />

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/show_closest_defib_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/fab_defib"
                fab:fab_colorNormal="@color/accent_dark"
                fab:fab_colorPressed="@color/accent_pressed"
                fab:fab_colorRipple="@color/accent_ripple"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/show_closest_defib_btn"
            android:layout_toStartOf="@id/show_closest_defib_btn"
            android:layout_alignTop="@id/show_closest_defib_btn"
            android:drawableLeft="@drawable/ic_info_outline_grey600_24dp"
            android:drawableRight="@drawable/ic_navigate_next_white_24dp"
            android:drawablePadding="5dp"
            android:paddingRight="0dp"
            android:paddingLeft="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:elevation="10dp"
            android:gravity="center_vertical|right"
            android:background="@drawable/bubble"
            android:textColor="@color/white"
            android:text="Quickly find the closest defibrillator oiwe fo oiewn f"
            fontPath="fonts/Roboto-Bold.ttf"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"/>

    </RelativeLayout>
</FrameLayout>
