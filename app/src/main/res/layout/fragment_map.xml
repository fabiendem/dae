<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".fragments.MapFragment"
    >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.MapFragment"
        map:mapType="normal"
        map:cameraTargetLat="@string/map_initial_lat"
        map:cameraTargetLng="@string/map_initial_lng"
        map:cameraZoom="@string/map_initial_zoom"
        />

    <!-- Use margins on the last button to avoid shadow cliping -->
    <RelativeLayout
        android:id="@+id/fab_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        >


        <RelativeLayout
            android:id="@+id/show_haut_rhin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/show_haut_rhin_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/fab_68"
                fab:fab_type="mini"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/accent_pressed"
                fab:fab_colorRipple="@color/accent_ripple"
                 />

            <LinearLayout
                android:id="@+id/tip_show_haut_rhin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/Tip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/show_haut_rhin_btn"
                android:layout_toStartOf="@id/show_haut_rhin_btn" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TipNumber"
                    android:text="2/2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TipText"
                    android:text="@string/tip_haut_rhin"
                    />
            </LinearLayout>
        </RelativeLayout>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/show_my_location_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_below="@id/show_haut_rhin"
            android:src="@drawable/fab_my_location"
            fab:fab_type="mini"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/accent_pressed"
            fab:fab_colorRipple="@color/accent_ripple" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_my_location_btn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/show_closest_defib_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/fab_defib"
                fab:fab_colorNormal="@color/accent_dark"
                fab:fab_colorPressed="@color/accent_pressed"
                fab:fab_colorRipple="@color/accent_ripple"
                />

            <LinearLayout
                android:id="@+id/tip_show_closest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/Tip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/show_closest_defib_btn"
                android:layout_toStartOf="@id/show_closest_defib_btn" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TipNumber"
                    android:text="1/2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TipText"
                    android:text="@string/tip_closest_defib"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
