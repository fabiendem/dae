<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/green_200</item>
    </style>

    <style name="AppTheme.TranslucentStatusBar">
    </style>

    <style name="AppTheme.OpaqueStatusBar">
    </style>

    <style name="AppTheme.TranslucentStatusBar.WhiteBackground">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.OpaqueStatusBar.WhiteBackground">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="DrawerHandler">

    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#1f000000</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DrawerToggle">
        <item name="android:background">@drawable/btn_drawer_toggle</item>
        <item name="android:src">@drawable/ic_menu_white_24dp</item>
    </style>

    <style name="DrawerButton" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:background">@drawable/btn_drawer_background_selector</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="DrawerButton.Activable">
        <item name="android:textColor">@color/btn_drawer_activable_textcolor_selector</item>
    </style>

    <style name="Tip">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/bkg_tip</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TipNumber">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/bkg_tip_number</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TipText">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>
